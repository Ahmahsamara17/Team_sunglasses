{%- extends "base_templates/pwnpost-full.py.j2" -%}

{% block setup %}
  {{- super() -}}
  {%- set settings.publish_method = "POST" -%}
  {%- set settings.disable_admin_posting = True -%}
  {%- set settings.insecure_cookie = False -%}
  {%- set settings.admin_pw_code = "flag[-20:]" -%}
